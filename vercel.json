{
  "version": 2,
  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*\\.(css|js|ico|png|jpg|jpeg|gif|svg|txt))",
      "destination": "/public/$1"
    },
    {
      "source": "/",
      "destination": "/index.html"
    }
  ]
}